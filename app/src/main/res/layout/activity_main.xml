<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/secondaryColor"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        style="@style/CardView.Light"
        android:layout_width="@dimen/textViewWidth"
        android:layout_height="@dimen/textViewHeight"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:text="Click the button to win big!!!"
        android:textColor="@color/secondPrimaryColor"
        android:textSize="@dimen/textViewFontSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextFood"
        style="@style/CardView.Light"
        android:layout_width="@dimen/editTextWidth"
        android:layout_height="@dimen/editTextHeight"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="400dp"
        android:ems="10"
        android:hint="Enter your favorite food here"
        android:inputType="textPersonName"
        android:textSize="@dimen/editTextFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editTextNumber"
        android:layout_width="@dimen/editTextWidth"
        android:layout_height="@dimen/editTextHeight"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="300dp"
        android:ems="10"
        android:hint="Enter your favorite number here"
        android:inputType="numberDecimal"
        android:textSize="@dimen/editTextFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="@dimen/buttonWidth"
        android:layout_height="@dimen/buttonHeight"
        android:layout_marginStart="125dp"
        android:layout_marginBottom="150dp"
        android:onClick="onButton"
        android:text="Click me"
        android:textColor="@color/secondPrimaryColor"
        android:textSize="@dimen/buttonFontSize"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/finalText"
        android:layout_width="@dimen/textViewWidth"
        android:layout_height="@dimen/textViewHeight"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="50dp"
        android:textColor="@color/primaryDarkColor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>